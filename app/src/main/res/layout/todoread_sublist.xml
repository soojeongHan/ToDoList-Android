<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edge">

    <CheckBox
            android:id="@+id/cb_item"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="16dp"
            android:layout_toLeftOf="@+id/tv_date"
            android:layout_toStartOf="@+id/tv_date"
            android:layout_marginEnd="168dp" android:layout_marginRight="168dp"/>

    <TextView
            android:id="@+id/tv_date"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:layout_toLeftOf="@+id/iv_delete"
            android:layout_toStartOf="@+id/iv_delete"
    />

    <TextView
            android:id="@+id/tv_header"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:padding="0dp"
            android:textSize="30sp"
            android:layout_toLeftOf="@+id/cb_item"
            android:layout_toStartOf="@+id/tv_date"
            android:layout_marginRight="-211dp"
            android:layout_marginEnd="4dp"
            android:layout_alignBottom="@+id/tv_date"
            android:layout_marginBottom="0dp"/>
    <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_delete"
            android:padding="8dp"
            android:layout_toLeftOf="@+id/iv_move"
            android:layout_toStartOf="@+id/iv_move"
    />

    <ImageView
            android:id="@+id/iv_move"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_move"
            android:padding="8dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
    />

</RelativeLayout>